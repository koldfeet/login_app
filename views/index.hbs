<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <title>Home</title>
</head>

<body>
    <nav>
        <h4>Node MySQL</h4>
        <ul>
            <li> <a href="/">Home</a> </li>
            {{#if user }}
            <li> <a href="/profile">Profile</a> </li>
            <li> <a href="/auth/logout">Logout</a> </li>
            {{else}}
            <li> <a href="/login">Login</a> </li>
            <li> <a href="/register">Register</a> </li>
            {{/if}}
        </ul>
    </nav>

    <div class="container mt-4">
        <div class="jumbotron">
            <h1 class="display-4">Login </h1>
            <h3 class="lead">Login with your email</h3>
             <p class="lead-login">
                <a class="btn btn-primary btn-lg" href="/login" role="button">Login Here</a>
            </p>
            <hr class="my-4">
            <p class ="register">Don't have a registered email yet?</p>
            <p class="lead-register">
                <a class="btn btn-primary btn-lg" href="/register" role="button">Register Here</a>
            </p>
        </div>
    </div>

    {{!-- bootstrap cdn --}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
